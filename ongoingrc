export PATH=$PATH:$HOME/opt/play-2.2.1
export PATH=$PATH:/usr/share/idea-IU-129.713/bin

export JAVA_HOME=/usr/lib/jvm/java-7-oracle

alias ack='ack-grep -G "target|FileStore/" --invert-file-match'

alias ply='sbt "project web"'

alias o='cd ~/ongoing/'

git-review() {
  if [[ -z $1 ]]; then
    branch=`git rev-parse --abbrev-ref HEAD`
    echo "No argument given, assuming: $branch"
  else
    branch=$1
  fi
  git push origin -u "$branch":dan/"$branch"
}

git-delete() {
  if [[ -n $1 ]]; then
    branch=$1
    git push origin :dan/$1
    git branch -d $1
  else
    echo "No branch specified"
  fi
}

source ~/ongoing/conf/bashrc_updates.bash
