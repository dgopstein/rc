<?xml version="1.0"?>
<deviceproductdef>
  <productname>JAPANESE_BLUETOOTH</productname>
  <productid>0x0257</productid>
</deviceproductdef>

<root>
  <item>
    <name>Japanese Bluetooth</name>
    <item>
      <name>Eisuu/Kana to Control/Enter</name>
      <identifier>private.jp2control_enter</identifier>
      <device_only>DeviceVendor::APPLE_COMPUTER, DeviceProduct::JAPANESE_BLUETOOTH</device_only>
      <autogen>__KeyToKey__ KeyCode::JIS_EISUU, KeyCode::CONTROL_L</autogen>
      <autogen>__KeyToKey__ KeyCode::JIS_KANA, KeyCode::RETURN</autogen>
    </item>

    <item>
      <name>Right CMD to Shift</name>
      <identifier>private.jp_rcmd2shift</identifier>
      <device_only>DeviceVendor::APPLE_COMPUTER, DeviceProduct::JAPANESE_BLUETOOTH</device_only>
      <autogen>__KeyToKey__ KeyCode::CONTROL_R, KeyCode::SHIFT_R</autogen>
    </item>

    <item>
      <name>Left CTRL to CMD</name>
      <identifier>private.jp_lctrl2cmd</identifier>
      <device_only>DeviceVendor::APPLE_COMPUTER, DeviceProduct::JAPANESE_BLUETOOTH</device_only>
      <!-- I already remapped command->control so this brings it back -->
      <autogen>__KeyToKey__ KeyCode::CONTROL_L, KeyCode::COMMAND_L</autogen>-->
    </item>

    <item>
      <name>Left CTRL to OPT</name>
      <identifier>private.jp_lctrl2opt</identifier>
      <device_only>DeviceVendor::APPLE_COMPUTER, DeviceProduct::JAPANESE_BLUETOOTH</device_only>
      <!-- I already remapped command->control so this turns it to option -->
      <autogen>__KeyToKey__ KeyCode::CONTROL_L, KeyCode::OPTION_L</autogen>-->
    </item>
  </item>
</root>
