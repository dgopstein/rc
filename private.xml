<?xml version="1.0"?>
<deviceproductdef>
  <productname>JAPANESE_BLUETOOTH</productname>
  <productid>0x0257</productid>
</deviceproductdef>

<root>
  <item>
    <name>Japanese Bluetooth</name>
    <item>
      <name>Eisuu/Kana to Control</name>
      <identifier>private.jp2control</identifier>
      <device_only>DeviceVendor::APPLE_COMPUTER, DeviceProduct::JAPANESE_BLUETOOTH</device_only>
      <autogen>__KeyToKey__ KeyCode::JIS_EISUU, KeyCode::CONTROL_L</autogen>
      <autogen>__KeyToKey__ KeyCode::JIS_KANA, KeyCode::CONTROL_R</autogen>
    </item>

    <item>
      <name>Brackets next to P</name>
      <identifier>private.brackets2p</identifier>
      <device_only>DeviceVendor::APPLE_COMPUTER, DeviceProduct::JAPANESE_BLUETOOTH</device_only>
      <autogen>__KeyToKey__ KeyCode::JIS_ATMARK, KeyCode::JIS_BRACKET_LEFT</autogen>
      <autogen>__KeyToKey__ KeyCode::JIS_BRACKET_LEFT, KeyCode::JIS_BRACKET_RIGHT</autogen>
    </item>

    <item>
      <name>Semicolon as Shift</name>
      <identifier>private.colon_as_enter</identifier>
      <device_only>DeviceVendor::APPLE_COMPUTER, DeviceProduct::JAPANESE_BLUETOOTH</device_only>
      <autogen>__KeyToKey__ KeyCode::SEMICOLON, KeyCode::SHIFT_R</autogen>
      <autogen>__KeyToKey__ KeyCode::SEMICOLON, ModifierFlag::CONTROL_L, KeyCode::SEMICOLON</autogen>
    </item>

    <item>
      <name>Colon to Return</name>
      <!--<appendix>(+ Control+Semicolon to Semicolon)</appendix>-->
      <device_only>DeviceVendor::APPLE_COMPUTER, DeviceProduct::JAPANESE_BLUETOOTH</device_only>
      <identifier>remap.colon2return</identifier>
      <autogen>__KeyToKey__ KeyCode::JIS_COLON, KeyCode::RETURN</autogen>
      <autogen>__KeyToKey__ KeyCode::JIS_COLON, ModifierFlag::CONTROL_L, KeyCode::JIS_COLON</autogen>
    </item>
  </item>
</root>
